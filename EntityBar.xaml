<Page x:Class="WRPG.EntityBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WRPG"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="300"
      MinHeight="100" MinWidth="200"
      
      
      Title="EntityBar">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Name="AvatarBox" Source="/empty.png" Stretch="Uniform" Grid.RowSpan="3" Margin="3"/>
        <TextBlock Name="NameBox" Grid.Column="1" Text="Dimas" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Margin="10"/>
        <ProgressBar Name="HpBar" Grid.Row="1" Grid.Column="1" Foreground="Red" Value="50" Margin="3" />
        <ProgressBar Name="StaminaBar" Grid.Row="2" Grid.Column="1" Foreground="#FF0010FF" Value="50" Margin="3" />
    </Grid>
</Page>
